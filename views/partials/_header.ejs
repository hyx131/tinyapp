<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <div>
      <% if (user) { %>
        <form method="POST" action="/logout">
          <label for="signout" style="color: lightgrey; margin: 10px 10px 0 0">User: <%= user.email %></label>
          <button type="submit" name="signout" class ="btn btn-outline-secondary">Sign out</button>
        </form> 
      <% } else { %>
        <a href="/register" style="margin: 0 20px 0 0; color:lightgrey">Register</a>
        <a href="/login" style="color:lightgrey">Login</a>
      <% } %>
  </div>
  </nav>
</header>